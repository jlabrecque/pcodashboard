           <th class="householdgiving_grid_names"><%= hg.campus %></th>
           <th class="householdgiving_grid_names"><%= hg.family %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month1[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month2[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month3[1] %></th>

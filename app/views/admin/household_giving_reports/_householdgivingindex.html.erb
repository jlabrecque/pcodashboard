         </tr>
         <% HouseholdGiving.all.each do |h| %>
         <tr>
            <th class="householdgiving_grid_names"><%= h.campus %></th>
            <th class="householdgiving_grid_names"><%= h.family %></th>
            <th class="householdgiving_grid_dates">$<%= h.month1[1] %></th>

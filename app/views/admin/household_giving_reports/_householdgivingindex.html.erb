            <th class="householdgiving_grid_dates">$<%= h.month7[1] %></th>
            <th class="householdgiving_grid_dates">$<%= h.month8[1] %></th>
            <th class="householdgiving_grid_dates">$<%= h.month9[1] %></th>
            <th class="householdgiving_grid_dates">$<%= h.month10[1] %></th>
            <th class="householdgiving_grid_dates">$<%= h.month11[1] %></th>
            <th class="householdgiving_grid_dates">$<%= h.month12[1] %></th>
            <th class="householdgiving_grid_names">$<%= h.annavg %></th>
            <th class="householdgiving_grid_names">$<%= h.lastqtravg %></th>
        </tr>
        <% end %>

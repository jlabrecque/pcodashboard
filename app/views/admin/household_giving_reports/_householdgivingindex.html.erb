           <th class="householdgiving_grid_dates">$<%= hg.month7[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month8[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month9[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month10[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month11[1] %></th>
           <th class="householdgiving_grid_dates">$<%= hg.month12[1] %></th>
           <th class="householdgiving_grid_names">$<%= hg.annavg %></th>
           <th class="householdgiving_grid_names">$<%= hg.lastqtravg %></th>
         </tr
